@model IEnumerable<IEPLeaveManagementSystem.Models.LeaveModel>
@{
    ViewBag.Title = "LeaveHistory";
}

<br />
<h2>Leave History</h2>
<br />

@using (Html.BeginForm("LeaveHistory", "EmployeeLeaves", FormMethod.Post))
{
    <div>
        <div style="display: flex; justify-content: flex-end;">
            <table>
                <tbody>
                    <tr>
                        @*<td width="100px">@Html.Label("Select year ", htmlAttributes: new { @class = "control-label" })</td>*@
                        <td width="150px">@Html.DropDownList("LeaveYear", (IEnumerable<SelectListItem>)ViewBag.LeaveYear, "--Select Year--", new { style = "width: 100%; height: 30px; " })</td>
                        <td width="20px"></td>
                        <td width="50px"><input type="submit" id="btnSearch" value="Search" class="btn btn-default" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            @Html.Label("Year ", htmlAttributes: new { @class = "control-label col-sm-1 padding-left-0 emp-label" })
            <div class="col-sm-5" id="divYear" style="font-weight:bold">
                @Html.Raw(ViewBag.CurrentYear)
                @*@Html.DisplayFor(model => model.LeaveAllocatingYear, new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.ID)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }
    </table>
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>



